<% include ../partials/header %>

    <div class="container">
        <header class="jumbotron black">
            <div class="container">
                <h1>Welcome to my blog!</h1>
                <p>this is where all my thoughts go... </p>
                <p>
                    <a class="btn btn-primary btn-lg" href="/blog/new">Create</a>
                </p>
            </div>
        </header>
        <div class="row">
            <% blog.forEach(function(blog){%>
                <div class="col-md-12">
                    <div class="black">
                        <div class="caption">
                            <h3>
                                <%= blog.title%>
                            </h3>
                        </div>
                        <h4>Author-
                            <%= blog.name%>
                        </h4>

                        <p>
                            <a href="/blog/<%= blog.id%>" class="btn btn-primary">Read More</a>
                        </p>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>
    <% include ../partials/footer %>
